<Application x:Class="DistributedSolver.Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Light Theme Palette -->
            <Color x:Key="UiSurfaceColor">#FFFFFF</Color>
            <Color x:Key="UiSurfaceAltColor">#F8FAFC</Color>
            <Color x:Key="UiBorderColor">#E2E8F0</Color>
            
            <Color x:Key="UiAccentColor">#3B82F6</Color>
            <Color x:Key="UiAccentMutedColor">#2563EB</Color>
            
            <Color x:Key="UiTextPrimaryColor">#0F172A</Color>
            <Color x:Key="UiTextSecondaryColor">#64748B</Color>
            
            <Color x:Key="UiSuccessColor">#10B981</Color>
            <Color x:Key="UiWarningColor">#F59E0B</Color>
            <Color x:Key="UiDangerColor">#EF4444</Color>

            <Thickness x:Key="UiCardPadding">20</Thickness>
            <Thickness x:Key="UiCardMargin">0,0,0,20</Thickness>

            <!-- Brushes -->
            <SolidColorBrush x:Key="UiSurfaceBrush" Color="{StaticResource UiSurfaceColor}"/>
            <SolidColorBrush x:Key="UiSurfaceAltBrush" Color="{StaticResource UiSurfaceAltColor}"/>
            <SolidColorBrush x:Key="UiBorderBrush" Color="{StaticResource UiBorderColor}"/>
            
            <SolidColorBrush x:Key="UiAccentBrush" Color="{StaticResource UiAccentColor}"/>
            <SolidColorBrush x:Key="UiAccentMutedBrush" Color="{StaticResource UiAccentMutedColor}"/>
            
            <SolidColorBrush x:Key="UiTextPrimaryBrush" Color="{StaticResource UiTextPrimaryColor}"/>
            <SolidColorBrush x:Key="UiTextSecondaryBrush" Color="{StaticResource UiTextSecondaryColor}"/>
            
            <SolidColorBrush x:Key="UiSuccessBrush" Color="{StaticResource UiSuccessColor}"/>
            <SolidColorBrush x:Key="UiWarningBrush" Color="{StaticResource UiWarningColor}"/>
            <SolidColorBrush x:Key="UiDangerBrush" Color="{StaticResource UiDangerColor}"/>

            <!-- Shared UI styles -->
            <Style x:Key="UiButton" TargetType="Button">
                <Setter Property="Padding" Value="12 8"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Background" Value="{StaticResource UiAccentBrush}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="0"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                    <Setter Property="Background" Value="{StaticResource UiTextSecondaryBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="UiOutlinedButton" TargetType="Button" BasedOn="{StaticResource UiButton}">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="{StaticResource UiBorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="0"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource UiSurfaceAltBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="UiTextBox" TargetType="TextBox">
                <Setter Property="Padding" Value="8 6"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Background" Value="{StaticResource UiSurfaceBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource UiBorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="0">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="SectionHeader" TargetType="TextBlock">
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="{StaticResource UiTextSecondaryBrush}"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
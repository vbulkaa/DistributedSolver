<Window x:Class="DistributedSolver.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Distributed Solver"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource UiSurfaceBrush}"
        Foreground="{StaticResource UiTextPrimaryBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/> <!-- Fixed compact sidebar -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDEBAR -->
        <Border Grid.Column="0" Background="{StaticResource UiSurfaceAltBrush}" BorderBrush="{StaticResource UiBorderBrush}" BorderThickness="0 0 1 0">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Title -->
                    <RowDefinition Height="Auto"/> <!-- Data Load -->
                    <RowDefinition Height="Auto"/> <!-- Stats -->
                    <RowDefinition Height="Auto"/> <!-- Generator -->
                    <RowDefinition Height="*"/>    <!-- Solver Actions (Fill space) -->
                    <RowDefinition Height="Auto"/> <!-- Save -->
                </Grid.RowDefinitions>

                <!-- 1. Title -->
                <StackPanel Grid.Row="0" Margin="0,0,0,24">
                    <TextBlock Text="Distributed Solver" FontSize="20" FontWeight="Bold" Foreground="{StaticResource UiTextPrimaryBrush}"/>
                    <TextBlock Text="Панель управления" FontSize="12" Foreground="{StaticResource UiTextSecondaryBrush}"/>
                </StackPanel>

                <!-- 2. Data Load -->
                <StackPanel Grid.Row="1" Margin="0,0,0,20">
                    <TextBlock Text="ЗАГРУЗКА ДАННЫХ" Style="{StaticResource SectionHeader}"/>
                    <UniformGrid Columns="2" Rows="2">
                        <Button Style="{StaticResource UiOutlinedButton}" Content="Матрица" Margin="0,0,4,4" Click="LoadMatrix_Click"/>
                        <Button Style="{StaticResource UiOutlinedButton}" Content="Вектор B" Margin="4,0,0,4" Click="LoadFreeTerms_Click"/>
                        <Button Style="{StaticResource UiOutlinedButton}" Content="Узлы" Margin="0,4,4,0" Click="LoadNodes_Click"/>
                        <Button Style="{StaticResource UiOutlinedButton}" Content="Workers" Margin="4,4,0,0" Click="LoadWorkers_Click"/>
                    </UniformGrid>
                </StackPanel>

                <!-- 3. Stats -->
                <Border Grid.Row="2" Background="{StaticResource UiSurfaceBrush}" BorderBrush="{StaticResource UiBorderBrush}" BorderThickness="1" Padding="12" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Размер" FontSize="11" Foreground="{StaticResource UiTextSecondaryBrush}"/>
                            <TextBlock Text="{Binding SystemSize}" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>
                        <Border Grid.Column="1" Width="1" Background="{StaticResource UiBorderBrush}" Margin="8,2"/>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Узлы" FontSize="11" Foreground="{StaticResource UiTextSecondaryBrush}"/>
                            <TextBlock Text="{Binding NodeCount}" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 4. Generator -->
                <StackPanel Grid.Row="3" Margin="0,0,0,20">
                    <TextBlock Text="ГЕНЕРАТОР" Style="{StaticResource SectionHeader}"/>
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Style="{StaticResource UiTextBox}" Text="{Binding RandomSize, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,8,0"/>
                        <Button Grid.Column="1" Style="{StaticResource UiOutlinedButton}" Content="Случайная" Padding="12,6" Click="GenerateRandom_Click"/>
                    </Grid>
                    <Button Style="{StaticResource UiOutlinedButton}" Content="Расширенный генератор..." HorizontalAlignment="Stretch" Click="GenerateMatrix_Click"/>
                </StackPanel>

                <!-- 5. Solver Actions -->
                <StackPanel Grid.Row="4">
                    <TextBlock Text="ВЫЧИСЛЕНИЯ" Style="{StaticResource SectionHeader}"/>
                    <Button Style="{StaticResource UiButton}" Content="Распределённый запуск" Margin="0,0,0,8" 
                            Command="{Binding SolveDistributedCommand}" Click="SolveDistributed_Click" IsEnabled="{Binding CanSolve}"/>
                    
                    <Button Style="{StaticResource UiButton}" Content="Линейный запуск" Background="{StaticResource UiTextSecondaryBrush}" Margin="0,0,0,8" 
                            Click="SolveLinear_Click" IsEnabled="{Binding CanSolve}"/>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Style="{StaticResource UiOutlinedButton}" Content="Сравнение" Margin="0,0,4,0" 
                                Click="CompareMethods_Click" IsEnabled="{Binding CanSolve}"/>
                        <Button Grid.Column="1" Style="{StaticResource UiOutlinedButton}" Content="Тест воркеров" Margin="4,0,0,0" 
                                Click="SolveMultiple_Click" IsEnabled="{Binding CanSolve}"/>
                    </Grid>
                    
                    <Button Style="{StaticResource UiButton}" Content="Остановить" Background="{StaticResource UiDangerBrush}" 
                            Click="Cancel_Click" IsEnabled="{Binding IsSolving}"/>
                </StackPanel>

                <!-- 6. Save -->
                <StackPanel Grid.Row="5" VerticalAlignment="Bottom">
                    <TextBlock Text="СОХРАНЕНИЕ" Style="{StaticResource SectionHeader}"/>
                    <StackPanel>
                        <Button Style="{StaticResource UiOutlinedButton}" Content="Сохранить матрицу" Margin="0,0,0,8" Click="SaveMatrix_Click"/>
                        <Button Style="{StaticResource UiOutlinedButton}" Content="Сохранить решение" Margin="0,0,0,8" Click="SaveSolution_Click"/>
                        <Button Style="{StaticResource UiOutlinedButton}" Content="Сохранить сравнение" Click="SaveComparison_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- MAIN CONTENT RIGHT -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Top Bar -->
                <RowDefinition Height="*"/>    <!-- Tabs -->
                <RowDefinition Height="Auto"/> <!-- Footer Status -->
            </Grid.RowDefinitions>

            <!-- Top Info Bar -->
            <Border Grid.Row="0" BorderBrush="{StaticResource UiBorderBrush}" BorderThickness="0 0 0 1" Padding="24 12" Background="White">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Status & Time -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <StackPanel Margin="0,0,24,0">
                            <TextBlock Text="Статус" FontSize="11" Foreground="{StaticResource UiTextSecondaryBrush}"/>
                            <TextBlock Text="{Binding Status}" FontSize="14" FontWeight="SemiBold" Foreground="{Binding StatusColor}"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="Время" FontSize="11" Foreground="{StaticResource UiTextSecondaryBrush}"/>
                            <TextBlock Text="{Binding ExecutionTime}" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Progress -->
                    <Grid Grid.Column="1" Margin="40,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="{Binding ProgressText}" FontSize="11" Foreground="{StaticResource UiTextSecondaryBrush}" HorizontalAlignment="Left" Margin="0,0,0,4"/>
                        <ProgressBar Grid.Row="1" Value="{Binding ProgressValue}" Maximum="100" Height="4" 
                                     Background="{StaticResource UiSurfaceAltBrush}" Foreground="{StaticResource UiAccentBrush}" Visibility="{Binding ProgressVisibility}"/>
                    </Grid>
                    
                    <!-- Right Corner Info -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Timestamp}" FontSize="11" Foreground="{StaticResource UiTextSecondaryBrush}" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Tabs -->
            <TabControl Grid.Row="1" BorderThickness="0" Background="Transparent" Margin="12">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Padding" Value="16 10"/>
                        <Setter Property="Foreground" Value="{StaticResource UiTextSecondaryBrush}"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border x:Name="Border" BorderBrush="Transparent" BorderThickness="0 0 0 2" Background="Transparent" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter ContentSource="Header" HorizontalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource UiAccentBrush}"/>
                                            <Setter Property="Foreground" Value="{StaticResource UiAccentBrush}"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="{StaticResource UiAccentBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <TabItem Header="Сравнение">
                    <DataGrid ItemsSource="{Binding ComparisonResults}" AutoGenerateColumns="False" IsReadOnly="True" 
                              Background="Transparent" BorderThickness="0" GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column" RowBackground="Transparent" Margin="0,8,0,0">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{StaticResource UiSurfaceAltBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource UiTextSecondaryBrush}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="12 8"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="12 8"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                                <ContentPresenter/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Метод" Binding="{Binding Method}" Width="2*"/>
                            <DataGridTextColumn Header="Время (сек)" Binding="{Binding ExecutionTimeSec, StringFormat=F3}" Width="*"/>
                            <DataGridTextColumn Header="Погрешность" Binding="{Binding Error, StringFormat=E6}" Width="*"/>
                            <DataGridTextColumn Header="Ускорение" Binding="{Binding Speedup, StringFormat='{}{0:F2}x'}" Width="*"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>

                <TabItem Header="Решение">
                    <DataGrid ItemsSource="{Binding SolutionItems}" AutoGenerateColumns="False" IsReadOnly="True"
                              Background="Transparent" BorderThickness="0" GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column" RowBackground="Transparent" Margin="0,8,0,0">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{StaticResource UiSurfaceAltBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource UiTextSecondaryBrush}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="12 8"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="12 8"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№" Binding="{Binding Index}" Width="80"/>
                            <DataGridTextColumn Header="Переменная" Binding="{Binding Variable}" Width="120"/>
                            <DataGridTextColumn Header="Значение (sci)" Binding="{Binding Value, StringFormat=E10}" Width="200"/>
                            <DataGridTextColumn Header="Значение" Binding="{Binding ValueNormal, StringFormat=F6}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>

                <TabItem Header="Узлы">
                    <!-- Using ScrollViewer only here, not on the whole page -->
                    <ScrollViewer Margin="0,8,0,0" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding WorkerTasks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource UiSurfaceAltBrush}" BorderThickness="1" BorderBrush="{StaticResource UiBorderBrush}" Margin="0,0,0,8">
                                        <Grid Margin="12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock Text="{Binding WorkerName}" FontWeight="SemiBold" FontSize="13"/>
                                                <TextBlock Text="{Binding Method}" FontSize="11" Foreground="{StaticResource UiTextSecondaryBrush}"/>
                                                <TextBlock Text="{Binding ErrorMessage}" Foreground="{StaticResource UiDangerBrush}" FontSize="11" Margin="0,2,0,0"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" MinWidth="150">
                                                <TextBlock Text="{Binding Progress, StringFormat='{}{0:F1}%'}" HorizontalAlignment="Right" FontWeight="Bold" FontSize="12"/>
                                                <ProgressBar Value="{Binding Progress}" Maximum="100" Height="3" Margin="0,4,0,0" 
                                                             Background="{StaticResource UiBorderBrush}" Foreground="{StaticResource UiAccentBrush}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="Логи">
                    <DockPanel Margin="0,8,0,0">
                        <TextBox Text="{Binding LogText}" FontFamily="Consolas" FontSize="12" IsReadOnly="True" VerticalScrollBarVisibility="Auto" 
                                 Background="{StaticResource UiSurfaceAltBrush}" BorderThickness="0" Padding="12"/>
                    </DockPanel>
                </TabItem>
            </TabControl>

            <!-- Footer Status Text -->
            <Border Grid.Row="2" BorderBrush="{StaticResource UiBorderBrush}" BorderThickness="0 1 0 0" Padding="12 8" Background="{StaticResource UiSurfaceAltBrush}">
                <TextBlock Text="{Binding StatusBarText}" FontSize="11" Foreground="{StaticResource UiTextSecondaryBrush}"/>
            </Border>
        </Grid>
    </Grid>
</Window>